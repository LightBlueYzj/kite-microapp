/* 布局 */
.container {
	
  display: flex;
  flex-direction: column;
  box-sizing: border-box;
  height:100%;
} 

/* 统一内边距 */
.info > view,
.details-scroll-view,
.price {
	box-sizing: border-box;
	padding: .5rem;
}
.details > .title {
	box-sizing: border-box;
	padding: .5rem .5rem 0;
}

/* 分隔线（边框） */
.container { --border: 1px solid gray; }
.info > view { border-bottom: var(--border); }
.price { border-top: var(--border); }

/* 元素样式 */
.bold, .title, .price {
	color: #18465c;
	font-weight: bold;
}

.info .bold {
	padding-inline-end: 1rem;
}

.info > .title {
	background-color: lightcyan;
	font-size: x-large;
}

.details-scroll-view {
	height: 50vh;
	padding: .5rem;
}