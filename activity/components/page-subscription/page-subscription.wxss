/* activity/components/card-subscription/card-subscription.wxss */
.page-subscription {
  display: flex;
  flex-direction: column;
  z-index: 10;
}

.card-subscription {
  position: relative;
  display: flex;
  flex-direction: row;
  justify-content: space-between;
  margin: 30rpx;
  margin-top: 20rpx;
  margin-bottom: 20rpx;
  background-color: #fff;
  padding-bottom: 25rpx;
  box-shadow: 0rpx 0rpx 20px 0rpx rgba(217, 217, 217, 0.5);
  border:1rpx solid rgba(217, 217, 217, 0.5);
  border-radius: 10px;
}

.container_left {
  display: flex;
  flex-direction: column;
  padding-left: 20rpx;
  margin-left: 20rpx;
  margin-top: 20rpx;
  font-size: 40rpx;
  font-weight: normal;
  color: rgba(0, 0, 0, 0.9);
}

.text_content {
  color: #6fa8dc !important;
}

.container_right {
  display: flex;
  flex-direction: column;
  align-items: flex-end;
  justify-content: space-between;
  margin-right: 20rpx;
  width: 200rpx;
}

.btn_more {
  width: 80rpx;
  height: 80rpx;
}

.text_campus {
  font-size: 40rpx;
  margin-bottom: 0rpx;
  font-weight: normal;
  color: #666666;

}

.container_list_pulldown {
  position: absolute;
  background-color: #ffffff;
  top: 60rpx;
  color: rgba(0, 0, 0, 1);
  padding: 10rpx;
  border-radius: 0rpx 0rpx 7rpx 7rpx;
}

.placeholder_card {
  background-color: black;
  height: 1px;
  width: 100%;
}

.btn_add {
  z-index: 50;
  background-color: rgba(159, 197, 232);
  box-shadow:0 1px 50px 0 rgba(165, 165, 165, 1);
  width: 160rpx;
  height: 60rpx;
  padding: 10rpx;
  border-radius: 10rpx;
  font-weight: normal;
  color: rgba(0, 0, 0, 0.7);
  display: flex;
  align-items: center;
  justify-content: center;
  position: fixed;
  bottom: 100rpx;
  left: 295rpx;
  font-size: 37rpx;
}

.container_left_item {
  display: flex;
  flex-direction: row;
}

.icon_left_item {
  width: 50rpx;
  height: 60rpx;
  margin-right: 7px;
}

.container_model {
  z-index: 200;
  position: fixed;
  left: 25rpx;
  top: 350rpx;
  display: flex;
  flex-direction: column;
  width: 700rpx;
  background-color: rgba(0, 0, 0, 0.9);
  color: #cccccc;
  border-radius: 15rpx;
}

.text_container_title {
  font-size: 40rpx;
  margin-left: 15px;
  margin-top: 15px;
}

.container_model_title {
  display: flex;
  flex-direction: row;
  align-items: center;
}

.container_options_item {
  display: flex;
  flex-direction: row;
  margin: 15px;
  align-items: center;
}

.text_options_item {
  box-shadow: 0px 2px 0px 0px #ff9900;
  margin-right: 5px;
}

input {
  width: 320rpx;
  box-shadow: 0px 2px 0px 0px #ff9900;
}

.icon_options_item {
  width: 50rpx;
  height: 60rpx;
  margin-right: 15px;
}

.container_btn {
  display: flex;
  flex-direction: row;
}

.placeholder_model {
  align-self: center;
  width: 95%;
  height: 1px;
  background-color: #666666;
}

.container_btn {
  margin-top: 10px;
  margin-bottom: 10px;
}

.btn_model {
  width: 50%;
  height: 80rpx;
}

.layer_cover {
  width: 100vw;
  height: 100vh;
  position: fixed;
  top: 0;
}

.external {
  z-index: 100;
  background-color: rgba(0, 0, 0, 0.5);
}

.internal {
  z-index: 300 !important;
}

.container_select_week {
  transform: scale(0);
  z-index: 500 !important;
  position: absolute;
  top: 50rpx;
  left: 50rpx;
  width: 600rpx;
  padding-bottom: 10px;
  border-radius: 10px;
  background-color: rgba(0, 0, 0, 1);
  border:0.5px solid #434343;
  color: #fff;
  display: flex;
  flex-direction: column;
  align-items: center;
}

.btn_close {
  text-align: center;
  position: absolute;
  right: 0;
  background-color: #808080;
  color: #000000;
  width: 80rpx;
  border-radius: 0rpx 10px 0rpx 30rpx;
}

.row_first_week {
  margin-top: 30px;
  display: flex;
  justify-content: center;
}

.row_second_week {
  display: flex;
  margin-top: 5px;
  justify-content: center;
}

.item_week {
  margin: 10rpx;
  font-weight: normal;
  font-size: larger;
  padding: 5rpx 20rpx 5rpx 20rpx;
  border-radius: 5rpx;
  background-color: #2a82e4;
  border:0.5px solid;
}

.tip_week {
  margin-top: 10px;
  color: #808080;
  font-size: small;
}

.btn_confirm_week {
  margin-top: 5px;
  width: 60px;
  height: 35px;
  background-color: #ff8d1a;
  border-radius: 5px;
}

.icon_confirm_week {
  width: 100%;
  height: 100%;
}