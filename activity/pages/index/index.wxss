/* activity/pages/index/index.wxss */
.main {
  height: 100vh;
  display: flex;
  flex-direction: column;
}


.navigators {
  display: flex;
  position: relative;
  font-size: large;
  padding-left: 5%;
  padding-bottom: 2%;
  box-shadow: 0rpx 6rpx 10rpx -10rpx #000000;
}

.navigator_school {
  margin-right: 40rpx;
}

.navigator_mine {
  position: absolute;
  right: 40rpx;
}

.navigator_selected {
  background-color: #f8f8f8;
  box-shadow: 0rpx 5rpx 0rpx 0rpx #6fa8dc;
}

.list_activity {
  display: flex;
  flex-direction: column;
  height: 100vh;
}

.activity_item {
  display: flex;
  flex-direction: column;
  margin: 40rpx;
  border-radius: 10rpx;
  background-color: #fff;
  box-shadow: 0rpx 0rpx 10rpx 5rpx #d9d9d9;
}


.activity_item_header {
  width: 100%;
  height: 300rpx;
  position: relative;
}
.activity_item_img {
  border-radius: 10rpx 10rpx 0rpx 0rpx;
  width: 100%;
  height: 100%;
}

.activity_item_title {
  color: #FCFCFC;
  position: absolute;
  bottom: 10rpx;
  left: 20rpx;
  font-size: large;
  font-weight: bold;
  z-index: 2;
}

.black_shadow {
  width: 100%;
  height: 100%;
  position: absolute;
  bottom: 0;
  z-index: 1;
  background: linear-gradient(to top,rgba(0, 0, 0, 0.4) , rgba(0, 0, 0, 0) 50%);
}

.activity_item_footer {
  position: relative;
  display: flex;
  justify-content: space-between;
  margin-left: 20rpx;
  margin-right: 20rpx;
  margin-top: 10rpx;
  margin-bottom: 10rpx;
}

.block_state {
  color: rgb(122, 122, 122);
  text-align: center;
  height: 100%;
  width: 20%;
  border-radius: 10rpx;
}

.state_underway {
  background-color: rgba(159, 197, 232, 0.7);
}

.state_over {
  background-color: rgba(217, 217, 217, 0.7);
}

.activity_item_time_interval {
  float: right;
  color: #666666;
}

.notice {
  text-align: center;
  color: #6fa8dc;
}

.blank_space {
  height: 100rpx;
}
