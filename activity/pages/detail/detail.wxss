/* activity/pages/activityDetails/activityDetails.wxss */
.main {
  display: flex;
  flex-direction: column;
  height: 100vh;
  background-color: #F0F0F0;
}

.text_fixed {
  width: 100%;
  position: fixed;
  font-size: larger;
  text-align: center;
  white-space: nowrap;
  text-overflow: ellipsis;
  overflow: hidden;
  word-break: break-all;
}


.container_header {
  display: flex;
  flex-direction: column;
  align-items: center;
  padding-top: 80rpx;
  background-color: #fff;
  box-shadow: 0rpx 0rpx 2rpx 0rpx;
}

.container_header_img {
  width: 85%;
  height: 300rpx;
  margin-bottom: 80rpx;
  box-shadow: 0rpx 0rpx 5rpx 0rpx #666666;
  border-radius: 10rpx;
}

.img_header {
  width: 100%;
  height: 100%;
  border-radius: 10rpx;
}

.container_header_content {
  width: 100%;
}

.container_header_content_top {
  display: flex;
  align-items: center;
  margin-bottom: 40rpx;
}


.lump_title {
  width: 15%;
  height: 20rpx;
  background: #00d2ff;  /* fallback for old browsers */
  background: -webkit-linear-gradient(to left, #928DAB, #00d2ff);  /* Chrome 10-25, Safari 5.1-6 */
  background: linear-gradient(to left, #928DAB, #00d2ff); /* W3C, IE 10+/ Edge, Firefox 16+, Chrome 26+, Opera 12+, Safari 7+ */

}

.text_title {
  font-size: larger;
  padding-right: 40rpx;
}

.container_header_content_bottom {
  margin: 6%;
  font-size: small;
  color: rgba(102, 102, 102, 0.8);
}

.container_position {
  display: flex;
  flex-direction: row;
  margin-bottom: 20rpx;
}

.icon_position {
  width: 40rpx;
  height: 40rpx;
  margin-right: 10rpx;
  align-self: center;
}

.container_time {
  display: flex;
  flex-direction: row;
  margin-bottom: 20rpx;
}

.icon_time {
  width: 40rpx;
  height: 40rpx;
  margin-right: 10rpx;
  align-self: center;
}

.container_population {
  display: flex;
  flex-direction: row;
  margin-bottom: 20rpx;
}

.icon_population {
  width: 40rpx;
  height: 40rpx;
  margin-right: 10rpx;
  align-self: center;
}

.text_department {
  margin-top: 60rpx;
  text-align: center;
  color: rgba(102, 102, 102, 0.6);
}

.container_content {
  height: 100%;
  display: flex;
  flex-direction: column;
  margin-top: 60rpx;
  background-color: #fff;
}

.container_content_hint {
  display: flex;
  flex-direction: row;
  align-items: center;
  font-size: large;
}

.lump_hint {
  width: 20rpx;
  height: 20rpx;
  margin: 20rpx;
  margin-left: 5%;
  background: #F2994A;  /* fallback for old browsers */
  background: -webkit-linear-gradient(to right, #F2C94C, #F2994A);  /* Chrome 10-25, Safari 5.1-6 */
  background: linear-gradient(to right, #F2C94C, #F2994A); /* W3C, IE 10+/ Edge, Firefox 16+, Chrome 26+, Opera 12+, Safari 7+ */
}

.container_content_text {
  padding: 6%;
}

.text_content {
  color: rgba(0, 0, 0, 0.7);
}

.container_fixed_bar {
  display: flex;
  flex-direction: row;
  position: fixed;
  bottom: 0vh;
  width: 100%;
  height: 130rpx;
}


.btn_join {
  position: absolute;
  right: 60rpx;
  margin-top: 15rpx;
  width: 200rpx;
  height: 100rpx;
  border-radius: 10rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  background: #FDC830;  /* fallback for old browsers */
  background: -webkit-linear-gradient(to right, #F37335, #FDC830);  /* Chrome 10-25, Safari 5.1-6 */
  background: linear-gradient(to right, #F37335, #FDC830); /* W3C, IE 10+/ Edge, Firefox 16+, Chrome 26+, Opera 12+, Safari 7+ */
  opacity: 0.9;
}


