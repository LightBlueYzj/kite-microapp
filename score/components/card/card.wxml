<!--score/components/card/card.wxml-->
<card class="card">

  <view class="leftContainer">
    <text class="nameText">{{name}}</text>
    <text class="creditText">学分：{{credit}}</text>
  </view>
  <view class="rightContainer">
    <text class="gradesText {{grades < 60? fail : ''}}">{{grades}}</text>
  </view>

</card>

