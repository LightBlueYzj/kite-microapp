<navBar background='#fff' back="{{true}}" home="{{true}}" bindback="handlerGobackClick" bindhome="handlerGohomeClick" />
<view class="background">
    <view class="time">
        <view class="date">
            {{date[6]}}
            <view class="set">
                <image src="../../assets/icons/calendar.png" class="icon1" bindtap="tapActivity"></image>
                <image src="../../assets/icons/set5.png" class="icon"></image>
            </view>
        </view>
        <view class="scroll_time">
            <view class="this_week">
                <view>{{this_week}}</view>
                <text>å‘¨</text>
            </view>
            <view class="choose_time">
                <view class="days {{choosedday.day == days.day? 'choose_couple':''}}" wx:for="{{days}}" wx:for-index="day" wx:key="day" wx:for-item="days" data-days="{{days}}" bindtap="tapDays">
                    <view class="day">{{days.day}}</view>
                    <view class="week">{{days.week}}</view>
                </view>
            </view>
        </view>
    </view>
    <view class="main">
        <view wx:if="{{chooseActivity == 1}}">
            <daily></daily>
        </view>
        <view wx:elif="{{chooseActivity == 2}}"></view>
    </view>
</view>