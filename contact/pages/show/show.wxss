    color: #6C7A89;
}
@keyframes living {
	0% { transform: scale(1); }
	25% { transform: scale(1.5); }
	50% { transform: scale(1); }
	75% { transform: scale(1.25); }
	100% { transform: scale(1); }
}

.living {
	animation: living .5s ease;
}
@keyframes start {
    from {width: 20vw;}
    to {width: 0vw;}
}
.start{
    animation: start .5s ease forwards;
}
@keyframes end {
    from {width: 0vw;}
    to {width: 20vw;}
}
.end{
    animation: end .5s ease forwards;
}
@keyframes start1 {
    from {width: 82vw;}
    to {width: 100vw;}
}
.start1{
    animation: start1 .5s ease forwards;
}
@keyframes end1 {
    from {width: 100vw;}
    to {width: 82vw;}
}
.end1{
    animation: end1 .5s ease forwards;
}