/* pages/mini-result/mini-result.wxss */
#mini-result-page {
  height: 100rem;
  background-color: #f7f7f7;
}
.mini-result-block{
  margin: 15rpx;
  border-radius: 10rpx 10rpx 10rpx 10rpx;
  box-shadow: 0rpx 0rpx 0rpx 5rpx #8A8C7E;
}
.header {
  display: flex;
  padding: 20rpx;
  justify-content: space-between;
  border-radius: 10rpx 10rpx 0 0;
  box-shadow: 0rpx 0rpx 0rpx 5rpx #8A8C7E;
}
.category{
  font-size: larger;
  font-weight: 900;
}
.more-icon{
  height: 50rpx;
  width: 60rpx;
}
.item{
  display: flex;
  flex-direction: column;
  padding: 20rpx;
}
.title{
  font-size: large;
  font-weight: 600;
}
.dep-time{
  display: flex;
  justify-content: space-between;
  font-size: small;
}
.searchHigh {
  font-size: large;
  font-weight: 600;
  color: #f00;
}



