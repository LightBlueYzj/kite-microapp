/* pages/debug/debug.wxss */

.group {
	margin: 1rem;
}

.group > .name,
.group > .button {
	margin-bottom: 1em;
}

.button {
	padding: .5em;
	font-size: inherit;
	font-weight: 500;
}

.title {
	font-size: 1.25em;
}

.name {
	display: flex;
	justify-content: space-between;
	align-items: center;
}

.copy {
	width: auto !important;
	margin: 0 !important;
	padding: .25em;
	color: #4CAF50;
	border-radius: 1px;
}

.value {
	width: auto;
	height: 25vh;
	padding: .5em;
	border: 1px solid currentColor;
	border-radius: 1px;
	font-size: .75em;
	font-family: Consolas, monospace;
}
