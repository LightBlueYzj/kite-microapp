<!-- index.wxml -->
<image class="background" src="/assets/pic/background.png" mode="aspectFill"></image>

<view class="main">

	<!-- banner -->
	<swiper class="card banner" indicator-dots="true" autoplay="true"
	interval="5000" easing-function="east-out" duration="500" circular="true">
		<swiper-item>
			<image class="banner-image" src="/assets/pic/temp_activity.png" bindtap="goTemp" />
		</swiper-item>
		<swiper-item>
			<image class="banner-image" src="/assets/pic/banner.png" />
		</swiper-item>
	</swiper>

	<!-- 滚动通知 -->
	<view class="card notice">
		<image src="/assets/icons/index/notice.png" />
		<swiper autoplay="true"
		interval="5000" duration="1000" circular="true" vertical="true">
			<swiper-item wx:for="{{notice}}" wx:key="id">{{item.title}}</swiper-item>
		</swiper>
	</view>

	<!-- 功能索引 -->
	<view class="card menu">
		<view class="menu-cell" wx:for="{{items}}" wx:key="url"
			data-url="{{item.url}}" bindtap="router">
			<image class="{{ index === clicked ? 'living' : '' }}" src="{{item.iconPath}}" />
			<view class="menu-cell-text">{{item.text}}</view>
		</view>
	</view>

	<view wx:if="{{!isLogin}}" class="tip-login">尚未登录，请先在“我”中登录</view>

</view>
