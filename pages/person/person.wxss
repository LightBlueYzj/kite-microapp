.text-gray {
	color: #9E9E9E;
}

.main {
	display: flex;
	flex-direction: column;
	box-sizing: border-box;
	margin-top: 10vh;
	padding: 2vh 5vw;
}

.personal {
	box-sizing: border-box;
	position: relative;
	margin: 1vh auto 5vh;
	height: 200rpx;
	width: 100%;
	border-radius: 1vh;
}

.help {
	display: flex;
	box-sizing: border-box;
	padding: 0.5vh 1vh;
	position: relative;
	height: 100%;
	width: 100%;
	background-color: white;
	border-radius: 4px;
	align-items: center;
}

.login {
	display: flex;
	box-sizing: border-box;
	padding: 0.5vh 1vh;
	position: relative;
	height: 100%;
	width: 100%;
	background-color: white;
	border-radius: 4px;
	align-items: center;
	justify-content: center;
}

.login .image_container {
	width: 8vh;
	height: 200rpx;
	border-radius: 50%;
	overflow: hidden;
	margin: 0 3vh 0 0;
	background-color: unset;
	padding: unset;
}

.image_container image {
	width: 100%;
	height: 100%;
}

.personal_pic {
	box-sizing: border-box;
	padding: 12.5rpx 12.5rpx;
	height: 175rpx;
	width: 175rpx;
}

.personal_pic image {
	width: 100%;
	height: 100%;
	border-radius: 50%;
}

.personal_main {
	margin-left: 2vh;
	width: 70%;
	height: 100%;
	display: flex;
	justify-content: space-between;
	align-items: center;
}

.main_info {
	height: 65%;
	width: auto;
	display: flex;
	justify-content: space-between;
	flex-direction: column;
}

.true_basic {
	display: flex;
	width: 20vw;
	text-align: end;
	color: white;
	font-size: 30rpx;
	height: 3.2vh;
	border-radius: 4px;
	justify-content: center;
	align-items: center;
}

.a_stu {
	background-color: #bbe1fa;
}

.n_stu {
	background-color: red;
}

.true_basic image {
	width: 5vw;
	height: 100%;
}

.signup {
	padding: .5em 0 .5em .5em; /* 右侧为 0，避免影响文字与边缘的边距 */
}

.menu-option {
	display: flex;
	justify-content: space-between;
	box-sizing: border-box;
	width: 100% !important;
	margin: 1vh 0;
	padding: .5vh 1vh;
	background-color: white;
	border-radius: 4px;
	font-size: 40rpx;
	font-weight: normal;
	line-height: 6vh;
}

.menu-option:active {
	background: #f7f7f7;
	opacity: 0.9;
}

.left {
	margin-left: 12.5rpx;
	font-size: 40rpx;
}

.right {
	font-weight: 100;
}

.shadow {
	box-shadow: 0px 0px 10px 6px rgba(224, 224, 224, 0.37);
}
