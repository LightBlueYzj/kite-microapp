<view class="container">

	<image class='background' src="/assets/pic/background.png" mode="aspectFill"></image>

	<view class="main">

		<!-- 已登录 -->
		<view wx:if="{{isLogin}}" class="section user">

			<!-- default-avatar:
				https://www.zhihu.com/question/30059362/answer/301792813
				https://pic1.zhimg.com/v2-6afa72220d29f045c15217aa6b275808_r.png -->
			<open-data class="avatar" type="userAvatarUrl"
			default-avatar="/assets/pic/default-avatar.png" />

			<view class="personal_main">
				<view class="main_info">
					<open-data class="nickname" type="userNickName"
					default-text="微信用户" />
					<view class="verified {{ isStudent ? 'a_stu' : 'n_stu' }}">
						<image src="/assets/icons/{{ isStudent ? 'right' : 'wrong' }}.png" />
						<text>{{ isStudent ? "已" : "未" }}实名</text>
					</view>
				</view>
				<navigator class="verify" url="/pages/certification/certification">
					认证 <text class="arrow">></text>
				</navigator>
			</view>

		</view>

		<!-- 未登录 -->
		<button wx:else class="section user login" bindtap="login">
			<image class="login-icon" src="/assets/icons/person/wechat.png" mode="aspectFit" />
			点此使用微信登录
		</button>

		<navigator class="section menu-option" url="/pages/about/about">
			关于我们<text class="arrow">></text>
		</navigator>

		<button class="section menu-option" open-type="feedback">
			意见反馈<text class="arrow">></text>
		</button>

	</view>
</view>

